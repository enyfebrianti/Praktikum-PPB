<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context="com.example.eni.praktikum.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:textColor="#ffff0100"
        android:textSize="28dp"
        android:text="ENY FEBRIANTI 150411100009" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="14dp"
        android:background="#bbb" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="TUGAS PRAKTIKUM"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#B22222"
        android:onClick="masuk"
        android:textColor="#F0F8FF"
        android:text="Modul 1"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="402dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="12dp"
        android:background="#B22222"
        android:onClick="modul2"
        android:text="MODUL 2"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="13dp"
        android:background="#B22222"
        android:onClick="modul3"
        android:text="MODUL 3"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="11dp"
        android:background="#B22222"
        android:onClick="modul4"
        android:text="MODUL 4"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="12dp"
        android:background="#B22222"
        android:onClick="modul5"
        android:text="MODUL 5"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="12dp"
        android:background="#B22222"
        android:onClick="modul6"
        android:text="MODUL 6"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:layout_marginTop="13dp"
        android:background="#B22222"
        android:onClick="modul7"
        android:text="MODUL 7"
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button8"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_alignStart="@+id/button7"
        android:layout_below="@+id/button7"
        android:layout_marginTop="11dp"
        android:background="#B22222"
        android:onClick="modul8"
        android:text="MODUL 8"
        android:textColor="#F0F8FF" />

</RelativeLayout>
